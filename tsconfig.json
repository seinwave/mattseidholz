{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": ".",
        "paths": {
            "@hooks/*": ["lib/components/hooks"],
            "@shell/*": ["libcomponents/shell"],

        },
        "downlevelIteration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "typeRoots": ["./"],
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx", "lib/effects/Boop/index.js"
    ],
    "exclude": [
        "node_modules"
    ]
}